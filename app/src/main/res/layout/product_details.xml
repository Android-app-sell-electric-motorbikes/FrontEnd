<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD">

    <!-- Nội dung chính -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_bar"
        android:padding="16dp"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Khu hiển thị ảnh + 2 mũi tên chuyển ảnh -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <!-- Nút mũi tên trái -->
                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:elevation="8dp"
                    android:src="@drawable/ic_arrow_left"
                    android:contentDescription="Ảnh trước"/>

                <!-- Nút mũi tên phải -->
                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:elevation="8dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Ảnh sau"/>
            </RelativeLayout>


            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xe Máy Điện NISPA VERA X"
                android:textSize="22sp"
                android:textColor="#212121"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="4dp" />

            <!-- Giá -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18.990.000đ"
                android:textSize="20sp"
                android:textColor="#4CAF50"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="4dp" />

            <!-- Đánh giá -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <RatingBar
                    android:id="@+id/product_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:progressTint="#FFD700"
                    style="?android:attr/ratingBarStyleSmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="(120 đánh giá)"
                    android:textColor="#FFFF5252"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Thông số kỹ thuật -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔧 Thông số kỹ thuật"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/product_specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Động cơ: 5000W\n• Tốc độ tối đa: 90 km/h\n• Pin: Lithium 72V - 40Ah\n• Quãng đường: 120 km/lần sạc"
                android:paddingBottom="20dp"
                android:textColor="#555555"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />

            <!-- Mô tả sản phẩm -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📖 Mô tả sản phẩm"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xe máy điện EV Super X với thiết kế hiện đại, tiết kiệm năng lượng và thân thiện môi trường. Được trang bị pin Lithium bền bỉ, tốc độ tối đa 90 km/h, thích hợp cho cả thành phố và đường dài."
                android:paddingBottom="120dp"
                android:textColor="#555555"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Thanh dưới cùng -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/bg_bottom_bar"
        android:gravity="center_vertical"
        android:elevation="12dp">

        <!-- Nút trừ -->
        <ImageButton
            android:id="@+id/btn_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_gray"
            android:src="@drawable/ic_minus"
            android:contentDescription="Giảm số lượng"
            android:padding="8dp"
            android:scaleType="centerInside" />

        <!-- Ô nhập số lượng -->
        <EditText
            android:id="@+id/quantity_input"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:text="1"
            android:gravity="center"
            android:textColor="#222"
            android:textSize="16sp"
            android:background="@drawable/bg_edittext_round" />

        <!-- Nút cộng -->
        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_gray"
            android:src="@drawable/ic_plus"
            android:contentDescription="Tăng số lượng"
            android:padding="8dp"
            android:scaleType="centerInside" />

        <!-- Nút thêm vào giỏ -->
        <Button
            android:id="@+id/add_to_cart_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Thêm vào giỏ hàng"
            android:src="@drawable/ic_shopping_cart"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>
